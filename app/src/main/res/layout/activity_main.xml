<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f8f8f8"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="7dp"
        app:layout_constraintBottom_toTopOf="@id/sv_control"
        android:id="@+id/rl_control"

        >
        <!--        <RelativeLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:weightSum="5"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintHorizontal_bias="1.0"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            >-->



        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ctrl_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="@dimen/control_heading_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"

            />

        <ImageView
            android:id="@+id/iv_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_page_title"
            app:srcCompat="@drawable/icon_home"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="@id/tv_page_title"
            android:layout_marginEnd="8dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/sv_control"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/rl_control"
        app:layout_constraintTop_toTopOf="@id/rl_control"
        app:layout_constraintBottom_toBottomOf="@id/ll_footer"
        app:layout_constraintBottom_toTopOf="@id/ll_footer"
        android:layout_marginBottom="@dimen/control_page_name_layout_m_bottm"
        app:layout_constraintTop_toBottomOf="@id/rl_control"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="7dp"


            >
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/control_page_name_layout_m_start"
                android:layout_marginTop="@dimen/control_page_name_layout_m_top"
                android:layout_marginEnd="@dimen/control_page_name_layout_m_end"
                android:orientation="horizontal"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:baselineAligned="false"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_weight="3">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="16dp"
                            android:layout_marginBottom="8dp"
                            >
                            <TextView
                                android:id="@+id/label_your_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/control_page_label_your_name_m_start"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="@dimen/control_page_label_your_name_m_end"
                                android:text="@string/ctrl_scr_your_name"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_name_divider"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layerType="software"
                                android:src="@drawable/dotted_line_selector"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_your_name"
                                android:contentDescription="@string/app_name"
                                />

                            <TextView
                                android:id="@+id/tv_tap_to_add_your_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/ctrl_scr_tap_to_add"
                                android:textColor="@color/control_page_tv_tap_to_add_your_name_t_size"
                                android:textSize="@dimen/control_page_tv_tap_to_add_your_name_t_size"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/label_your_name"
                                app:layout_constraintTop_toBottomOf="@+id/iv_name_divider" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        >


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="16dp"
                            android:layout_marginBottom="8dp"

                            >

                            <TextView
                                android:id="@+id/label_emoji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/control_page_label_your_name_m_start"
                                android:layout_marginEnd="@dimen/control_page_label_your_name_m_end"
                                android:text="@string/ctrl_scr_emoji"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layerType="software"
                                android:src="@drawable/dotted_line_selector"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_emoji"
                                android:contentDescription="@string/app_name"
                                />

                            <TextView
                                android:id="@+id/tv_tap_to_add_emoji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/ctrl_scr_tap_to_add"
                                android:textColor="@color/control_page_tv_tap_to_add_your_name_t_size"
                                android:textSize="@dimen/control_page_tv_tap_to_add_your_name_t_size"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/label_emoji"
                                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                                />




                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cv_text_size"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"

                    >

                    <TextView
                        android:id="@+id/labelTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/control_page_label_your_name_m_start"
                        android:text="@string/ctrl_scr_txt_size"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_divider_textSize"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_selector"
                        app:layout_constraintTop_toBottomOf="@id/labelTextSize"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:contentDescription="@string/app_name"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@+id/iv_divider_TextSize"
                        app:layout_constraintRight_toRightOf="@+id/iv_divider_TextSize"
                        app:layout_constraintTop_toBottomOf="@+id/iv_divider_TextSize"

                        >



                        <TextView
                            android:id="@+id/tv_btnSmal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_control_selected_drawable"
                            android:text="@string/ctrl_scr_txt_size_small"
                            android:paddingVertical="8dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_btnMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_control_selected_drawable"
                            android:text="@string/ctrl_scr_txt_size_medium"
                            android:paddingVertical="8dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="5dp"
                            />
                        <TextView
                            android:id="@+id/tv_btnLarge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_control_selected_drawable"
                            android:text="@string/ctrl_scr_txt_size_large"
                            android:paddingVertical="8dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_notification_and_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/control_page_name_layout_m_start"
                android:layout_marginTop="@dimen/control_page_name_layout_m_top"
                android:layout_marginEnd="@dimen/control_page_name_layout_m_end"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_text_size"
                android:baselineAligned="false"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="16dp"
                            android:layout_marginBottom="8dp"
                            >
                            <TextView
                                android:id="@+id/label_notification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/control_page_label_your_name_m_start"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="@dimen/control_page_label_your_name_m_end"
                                android:text="@string/ctrl_scr_label_set_notification"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_notification_divider"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layerType="software"
                                android:src="@drawable/dotted_line_selector"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_notification"
                                android:contentDescription="@string/app_name"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="@+id/iv_notification_divider"
                                app:layout_constraintRight_toRightOf="@+id/iv_notification_divider"
                                app:layout_constraintTop_toBottomOf="@+id/iv_notification_divider"

                                >
                                <TextView
                                    android:id="@+id/tv_notfiication_on"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/btn_control_selected_drawable"
                                    android:text="@string/ctrl_scr_notfication_on"
                                    android:paddingVertical="8dp"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:layout_marginEnd="5dp"
                                    />
                                <TextView
                                    android:id="@+id/tv_notfiication_off"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/btn_control_selected_drawable"
                                    android:text="@string/ctrl_scr_notfication_off"
                                    android:paddingVertical="8dp"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:layout_marginEnd="5dp"
                                    />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="16dp"
                            android:layout_marginBottom="8dp"
                            >
                            <TextView
                                android:id="@+id/label_hd_images"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/control_page_label_your_name_m_start"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="@dimen/control_page_label_your_name_m_end"
                                android:text="@string/ctrl_scr_label_set_hd_images"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_hd_images_divider"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layerType="software"
                                android:src="@drawable/dotted_line_selector"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_hd_images"
                                android:contentDescription="@string/app_name"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="@+id/iv_hd_images_divider"
                                app:layout_constraintRight_toRightOf="@+id/iv_hd_images_divider"
                                app:layout_constraintTop_toBottomOf="@+id/iv_hd_images_divider"

                                >
                                <TextView
                                    android:id="@+id/tv_hd_images_on"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/btn_control_selected_drawable"
                                    android:text="@string/ctrl_scr_label_set_hd_images_on"
                                    android:paddingVertical="8dp"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:layout_marginEnd="5dp"
                                    />
                                <TextView
                                    android:id="@+id/tv_hd_images_off"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/btn_control_selected_drawable"
                                    android:text="@string/ctrl_scr_label_set_hd_images_off"
                                    android:paddingVertical="8dp"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:layout_marginEnd="5dp"
                                    />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_notification_and_image"
            android:layout_marginStart="@dimen/control_page_name_layout_m_start"
            android:layout_marginTop="@dimen/control_page_name_layout_m_top"
            android:layout_marginEnd="@dimen/control_page_name_layout_m_end"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="6dp"
                app:cardPreventCornerOverlap="false"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    >

                    <TextView
                        android:id="@+id/label_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ctrl_scr_label_rate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintTop_toBottomOf="parent"

                        />

                    <ImageView
                        android:id="@+id/iv__rate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layerType="software"
                        android:src="@drawable/ic_contact"
                        app:layout_constraintLeft_toRightOf="@id/label_rate"
                        app:layout_constraintTop_toTopOf="@id/label_rate"
                        app:layout_constraintBottom_toBottomOf="@id/label_rate"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/ll_footer"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="383dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/control_page_footer_color"

        >


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>